{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/mark1russell7/cue/client/registry.schema.json",
  "title": "Client Registry",
  "description": "Schema for .client-registry.json files generated by `client announce`",
  "type": "object",
  "required": ["schemaVersion", "packages"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1,
      "description": "Schema version for future compatibility"
    },
    "packages": {
      "type": "object",
      "description": "Map of package name to registry entry",
      "additionalProperties": {
        "$ref": "#/definitions/RegistryEntry"
      },
      "propertyNames": {
        "pattern": "^(@[a-z0-9-]+/)?[a-z0-9-]+$"
      }
    }
  },
  "definitions": {
    "RegistryEntry": {
      "type": "object",
      "required": ["proceduresPath", "registeredAt"],
      "additionalProperties": false,
      "properties": {
        "proceduresPath": {
          "type": "string",
          "pattern": "^\\./.*\\.js$",
          "description": "Path to procedures file relative to package (e.g., './dist/register.js')"
        },
        "registeredAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when this entry was added"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+.*$",
          "description": "Package version (semver)"
        }
      }
    }
  }
}
